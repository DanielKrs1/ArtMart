<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('templates/metadata') -%>
    <title>Editor - ArtMart</title>

    <style>
        canvas {
            border: none;
            outline: none;
            border: #039be5 3px solid;
            border-radius: 5px;
            justify-content: center;
            width: 50% !important;
            height: auto !important;
            image-rendering: pixelated;
        }
    </style>
</head>
<body>
    <%- include('templates/navbar') -%>
    <div class="container center-align">
        <h1>Art Editor</h1>
        
        <div id="canvas-container">

        </div>
        <br>
        <div id="color-grid">
            <% for (const color of colors) { %>
            <a class="btn-floating btn-large waves-effect waves-light color-btn"
                x-hex="<%= color %>"
                style="color: <%= color %>; background-color: <%= color %>">
            </a>
            <% } %>
        </div>
    </div>
    <%- include('templates/footer') -%>

    <script src="/editor/p5.js"></script>
    <script src="/editor/artEditor.js"></script>
</body>
</html>